<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/border_dark" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="10dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="10dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="100%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="@color/white" />
            </shape>
        </rotate>
    </item>
    <item
        android:bottom="1dp"
        android:top="33dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>