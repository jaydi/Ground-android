<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/selector_match_upcoming"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="12dp" >

    <LinearLayout
        style="@style/MatchTimeInfoBox"
        android:background="@drawable/background_match_date_upcoming" >

        <TextView
            android:id="@+id/text_match_day_upcoming"
            style="@style/MatchTimeInfoDay"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_match_date_upcoming"
            style="@style/MatchTimeInfoDate"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        style="@style/MatchInfoBox"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                style="@style/MatchInfoIcon"
                android:src="@drawable/ic_match_time_white" />

            <TextView
                android:id="@+id/text_match_time_upcoming"
                style="@style/MatchInfoText"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                style="@style/MatchInfoIcon"
                android:src="@drawable/ic_match_location_white" />

            <TextView
                android:id="@+id/text_match_location_upcoming"
                style="@style/MatchInfoText"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp" >

        <ImageView
            style="@style/MatchInfoIcon"
            android:src="@drawable/ic_match_opponent_white" />

        <TextView
            android:id="@+id/text_match_opponent_upcoming"
            style="@style/MatchInfoText"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>