<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_match_unset_home_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/selector_match_unset_home"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <TextView
        android:layout_width="80dp"
        android:layout_height="12dp"
        android:layout_gravity="right"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/unset_home_match"
        android:textColor="@color/white"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false" >

        <LinearLayout
            style="@style/MatchTimeInfoBox"
            android:background="@drawable/background_match_date_unset_home" >

            <TextView
                android:id="@+id/text_match_day_unset_home"
                style="@style/MatchTimeInfoDay"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_match_date_unset_home"
                style="@style/MatchTimeInfoDate"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            style="@style/MatchInfoBox"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    style="@style/MatchInfoIcon"
                    android:src="@drawable/ic_match_opponent_gray" />

                <TextView
                    android:id="@+id/text_match_opponent_unset_home"
                    style="@style/MatchInfoText"
                    android:textColor="@color/text_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    style="@style/MatchInfoIcon"
                    android:src="@drawable/ic_match_location_gray" />

                <TextView
                    android:id="@+id/text_match_location_unset_home"
                    style="@style/MatchInfoText"
                    android:textColor="@color/text_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_match_status_unset_home"
                style="@style/MatchStatusIcon" />

            <TextView
                android:id="@+id/text_match_status_unset_home"
                style="@style/MatchStatusText" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>