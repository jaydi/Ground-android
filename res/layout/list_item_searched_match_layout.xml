<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/selector_match_unset_home"
    android:baselineAligned="false"
    android:padding="12dp" >

    <LinearLayout
        style="@style/MatchTimeInfoBox"
        android:background="@drawable/background_match_date_unset_home" >

        <TextView
            android:id="@+id/text_match_day_searched_match"
            style="@style/MatchTimeInfoDay"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_match_date_searched_match"
            style="@style/MatchTimeInfoDate"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout style="@style/MatchInfoBox" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <ImageView
                style="@style/MatchInfoIcon"
                android:src="@drawable/ic_match_opponent_black" />

            <TextView
                android:id="@+id/text_match_opponent_searched_match"
                style="@style/MatchInfoText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp" >

            <ImageView
                style="@style/MatchInfoIcon"
                android:src="@drawable/ic_match_location_black" />

            <TextView
                android:id="@+id/text_match_location_searched_match"
                style="@style/MatchInfoText" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/text_match_distance_searched_match"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

</LinearLayout>