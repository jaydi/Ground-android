<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FullScreenContainer"
    android:orientation="vertical"
    tools:context=".PushSurveyActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/background_border_buttom"
        android:padding="10dp" >
        
        <ImageView
            android:id="@+id/image_push_survey_select_all"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_checkbox_not_checked"
            android:clickable="true"
            android:onClick="selectAll"
            android:scaleType="fitXY" />
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/select_all"
            android:gravity="center_vertical" />
    </LinearLayout>
    
    <ListView
        android:id="@+id/list_push_survey_members"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>